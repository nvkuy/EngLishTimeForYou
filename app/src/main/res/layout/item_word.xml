<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <ImageView
        android:id="@+id/word_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/subject" />

    <TextView
        android:id="@+id/tv_eng_word"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tvKind"
        android:layout_toRightOf="@+id/word_icon"
        android:gravity="center_vertical"
        android:text="EngWord"
        android:textColor="@color/BLUE"
        android:textSize="17.5sp" />

    <TextView
        android:id="@+id/tvKind"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_toRightOf="@+id/word_icon"
        android:gravity="center"
        android:text="Kind"
        android:textColor="#b72328"
        android:textSize="17.5sp" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/tv_viet_word"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/tvKind"
        android:layout_toRightOf="@+id/tv_eng_word"
        android:gravity="center_vertical"
        android:text="VietWord"
        android:textColor="@color/BLUE"
        android:textSize="17.5sp" />
</RelativeLayout>